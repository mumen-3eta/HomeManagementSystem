<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        tools:context=".SiginupActivity">


        <include
            android:id="@+id/toolbar"
            layout="@layout/main_toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/genral_background"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Sign Up"
                android:textColor="#FFFFFF"
                android:textSize="50dp"
                android:padding="10dp"/>


            <EditText
                android:id="@+id/userNameTextField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/feild_background"
                android:ems="10"
                android:gravity="center"
                android:hint="Enter Your Name"
                android:inputType="textPersonName"/>

            <EditText
                android:id="@+id/userEmailTextField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/feild_background"
                android:ems="10"
                android:gravity="center"
                android:hint="Enter Your Email"
                android:inputType="textEmailAddress" />


            <EditText
                android:id="@+id/userPasswordTextField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/feild_background"
                android:ems="10"
                android:gravity="center"
                android:hint="Enter Your Password"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/confirmPasswordTextField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/feild_background"
                android:ems="10"
                android:gravity="center"
                android:hint="Confirm Your Password"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/signUpButton"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:padding="10dp"
                android:text="Sign Up"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:onClick="signUpAction"/>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        android:layout_gravity="left"
        >
        <include
            layout="@layout/drawer" />

    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>
